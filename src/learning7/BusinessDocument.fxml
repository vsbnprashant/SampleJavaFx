<?xml version="1.0" encoding="UTF-8"?>
<?language javascript?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<HBox alignment="CENTER" spacing="5.0"
      xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/8" fx:controller="learning7.BusinessController">
    <fx:script>
        function handleButtonAction(event){
        textField.setText("clicked");
        }
    </fx:script>

    <children>
        <Label text="Label" />
        <TextField fx:id="textField" />
        <Button fx:id="button" text="Button" onAction="handleButtonAction(event);" />

        <Label text="${textField2.text}"  />
        <TextField fx:id="textField2" />


    </children>
</HBox>